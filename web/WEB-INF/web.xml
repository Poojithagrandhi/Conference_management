<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>read</servlet-name>
        <servlet-class>main.read</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispImage</servlet-name>
        <servlet-class>main.dispImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaptchaServelet</servlet-name>
        <servlet-class>main.CaptchaServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Captcha</servlet-name>
        <servlet-class>main.Captcha</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>main.CaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>read</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispImage</servlet-name>
        <url-pattern>/dispImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaServelet</servlet-name>
        <url-pattern>/CaptchaServelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Captcha</servlet-name>
        <url-pattern>/Captcha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/CaptchaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
